@model MyCarShop.Models.DomainModels.Car
@{
  ViewBag.Title = $"{Model.Model} Car Details";
}
<h1>Car Details</h1>
<input type="hidden" value="@Model.Id"/>
<div class="row">
  <div class="col"></div>
  <div class="col d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
      <img src="/images/@Model.ImageFileName" class="card-img-top" alt="@Model.Brand">
      <div class="card-body">
        <h5 class="card-title">@Model.Brand</h5>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Model: @Model.Model</li>
          <li class="list-group-item">Car Type: @Model.CarType</li>
          <li class="list-group-item">Price: @Model.Price?.ToString("C")</li>
          <li class="list-group-item">Color: @Model.Color</li>
        </ul>
      </div>
      <div class="card-footer">
        <a class="btn btn-outline-primary" asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-id="@Model.Id">Add to Cart</a>
      </div>
    </div>
  </div>
  <div class="col"></div>
</div>